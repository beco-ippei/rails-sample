
<h1>Listing Items</h1>

<% @items.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |item| %>
      <div class="col-md-4">
        <%= image_tag item.image_url, width: '100%' if item.image.present? %>
        <h4><%= link_to item.name, item %></h4>
        <%= item.description %>
      </div>
    <% end %>
  </div>
<% end %>

<hr>

<%= link_to 'New Item', new_item_path %>

